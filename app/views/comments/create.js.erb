<% if @comment.errors.present? %>
  $('.comment_errors').html('<%= render 'shared/errors', resource: @comment %>');
<% else %>
  $(".<%= @comment.commentable_type.downcase %>-comments").append('<%= j render @comment %>');
  $('textarea').val('');
  $("form#Add-<%= @comment.commentable_type %>-Comment-<%= @comment.commentable.id %>").addClass('hidden');
  $(".button-<%= @comment.commentable_type.downcase %>-comment").removeClass('hidden');
<% end %>
