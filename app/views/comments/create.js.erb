$('.comment_errors').html('<%= render 'shared/errors', resource: @comment %>');
<% if @comment.commentable_type == 'Category' %>
$('.category-comments').append('<%= j render @comment %>');
$('textarea').val('');
$("form#Add-Category-Comment-<%= @comment.commentable.id %>").addClass('hidden');
$('.button-category-comment').removeClass('hidden');
<% else %>
$('.post-comments').append('<%= j render @comment %>');
$('textarea').val('');
$("form#Add-Post-Comment-<%= @comment.commentable.id %>").addClass('hidden');
$('.button-post-comment').removeClass('hidden');
<% end %>
